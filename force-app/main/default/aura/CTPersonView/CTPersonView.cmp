<aura:component controller="CTPersonViewController">
    <aura:attribute name="recordId" type="String" />
    <aura:attribute name="status" type="String" />
    <aura:attribute name="fields" type="String[]"
        default="['Name', 'Mobile__c', 'Token__c', 'Health_Status__c', 'Status_Update_Date__c']" />
    <aura:handler event="c:CTPersonSelectEvent" value="{!this}" action="{!c.PersonSelectHandler}" />

    <aura:if isTrue="{! !empty(v.recordId)}">
        <div class="{!v.status+ ' person-card'}">
            <lightning:layout multipleRows="true">
                <lightning:layoutItem size="12" padding="around-small">

                    <lightning:recordForm aura:id="myRecordForm" recordId="{!v.recordId}" objectApiName="Person__c"
                        fields="{!v.fields}" columns="1" mode="readonly" />

                </lightning:layoutItem>
                <lightning:layoutItem size="12" padding="around-small">
                    <aura:if isTrue="{! !(v.status == 'Red')}">
                        <lightning:button label="Update Status To Red" variant="destructive"
                            title="Update Status To Red" onclick="{!c.UpdateHealthStatus}" />
                    </aura:if>
                </lightning:layoutItem>
            </lightning:layout>
        </div>

    </aura:if>



</aura:component>